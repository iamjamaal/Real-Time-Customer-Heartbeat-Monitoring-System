# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=heartbeat-events
KAFKA_GROUP_ID=heartbeat-consumer-group



# PostgreSQL Configuration
# NOTE: docker-compose maps host port 5433 → container 5432
#       Use 5433 if connecting from the host machine.
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=heartbeat_db
POSTGRES_USER=heartbeat_user
POSTGRES_PASSWORD=change_me_in_production

# Grafana
GF_ADMIN_PASSWORD=change_me_in_production


# Data Generator
# Fraction of events that are cardiac anomalies (BRADYCARDIA / TACHYCARDIA)
ANOMALY_INJECTION_RATE=0.05

# Fraction of events that are sensor errors (INVALID — bpm <= 0 or > 300)
# Applied independently of ANOMALY_INJECTION_RATE
INVALID_INJECTION_RATE=0.005


# Multi-Producer — number of parallel producer processes
# 1 worker = 2 events/sec; 4 workers = 8 events/sec
PRODUCER_WORKERS=1


# Logging — DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
