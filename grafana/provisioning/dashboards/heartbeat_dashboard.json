        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "title": "Total Anomalies",
      "type": "stat",
      "targets": [
        {
          "datasource": { "type": "postgres", "uid": "heartbeat-postgres" },
          "format": "table",
          "rawSql": "SELECT COUNT(*) AS \"Anomalies\" FROM heartbeat_anomalies;",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "postgres", "uid": "heartbeat-postgres" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 20 }
            ]
          },
          "unit": "short",
          "mappings": []
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "id": 3,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "title": "Anomalies (Last 5 min)",
      "type": "stat",
      "targets": [
        {
          "datasource": { "type": "postgres", "uid": "heartbeat-postgres" },
          "format": "table",
          "rawSql": "SELECT COUNT(*) AS \"Recent Anomalies\" FROM heartbeat_anomalies WHERE event_timestamp > NOW() - INTERVAL '5 minutes';",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": { "type": "postgres", "uid": "heartbeat-postgres" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          },
          "unit": "short",
          "mappings": []
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "id": 4,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "title": "Active Customers (Last 60 min)",
      "type": "stat",
      "targets": [
        {
          "datasource": { "type": "postgres", "uid": "heartbeat-postgres" },
          "format": "table",
          "rawSql": "SELECT COUNT(DISTINCT customer_id) AS \"Active Customers\" FROM heartbeat_records WHERE event_timestamp > NOW() - INTERVAL '60 minutes';",
          "refId": "A"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 11,
      "title": "BPM Trends",
      "type": "row"
    },
    {
      "datasource": { "type": "postgres", "uid": "heartbeat-postgres" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never",
            "spanNulls": false
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 80 }
            ]
          },
          "unit": "none",
          "min": 0,
          "max": 200
        },
        "overrides": []
      },
      "gridPos": { "h": 9, "w": 16, "x": 0, "y": 6 },
      "id": 5,
      "options": {
        "legend": { "calcs": ["mean", "min", "max"], "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "none" }
      },
      "title": "Fleet Average BPM — Per Minute",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "postgres", "uid": "heartbeat-postgres" },
          "format": "time_series",
          "rawSql": "SELECT DATE_TRUNC('minute', event_timestamp) AS \"time\", ROUND(AVG(heart_rate)::numeric, 1) AS \"Avg BPM\", MIN(heart_rate) AS \"Min BPM\", MAX(heart_rate) AS \"Max BPM\" FROM heartbeat_records WHERE $__timeFilter(event_timestamp) GROUP BY DATE_TRUNC('minute', event_timestamp) ORDER BY time ASC",
          "refId": "A",
          "timeColumn": "time"
        }
      ]
    },
    {
      "datasource": { "type": "postgres", "uid": "heartbeat-postgres" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "hideFrom": { "legend": false, "tooltip": false, "viz": false } },
          "unit": "short",
          "mappings": []
        },
        "overrides": []
      },
      "gridPos": { "h": 9, "w": 8, "x": 16, "y": 6 },
      "id": 6,
      "options": {
        "displayLabels": ["name", "value"],
        "legend": { "displayMode": "table", "placement": "bottom", "showLegend": true, "values": ["value", "percent"] },
        "pieType": "donut",
        "tooltip": { "mode": "single", "sort": "none" }
      },
      "title": "Anomaly Type Breakdown",
      "type": "piechart",
      "targets": [
        {
          "datasource": { "type": "postgres", "uid": "heartbeat-postgres" },
          "format": "table",
          "rawSql": "SELECT anomaly_type AS \"Type\", COUNT(*) AS \"Count\" FROM heartbeat_anomalies GROUP BY anomaly_type ORDER BY \"Count\" DESC;",
          "refId": "A"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 15 },
      "id": 12,
      "title": "Anomaly Feed",
      "type": "row"
    },
    {
      "datasource": { "type": "postgres", "uid": "heartbeat-postgres" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "anomaly_type" },
            "properties": [
              {
                "id": "custom.cellOptions",
                "value": {
                  "type": "color-background",
                  "mode": "basic"
                }
              },
              {
                "id": "mappings",
                "value": [
                  { "type": "value", "options": { "BRADYCARDIA": { "color": "blue", "index": 0 } } },
                  { "type": "value", "options": { "TACHYCARDIA": { "color": "red", "index": 1 } } },
                  { "type": "value", "options": { "INVALID": { "color": "orange", "index": 2 } } }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "heart_rate" },
            "properties": [
              { "id": "displayName", "value": "BPM" },
              { "id": "unit", "value": "short" }
            ]
          }
        ]
      },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 16 },
      "id": 7,
      "options": {
        "cellHeight": "sm",
        "footer": { "countRows": false, "fields": "", "reducer": ["sum"], "show": false },
        "showHeader": true,
        "sortBy": [{ "desc": true, "displayName": "event_timestamp" }]
      },
      "title": "Recent Anomalies (Last 30 Minutes)",
      "type": "table",
      "targets": [
        {
          "datasource": { "type": "postgres", "uid": "heartbeat-postgres" },
          "format": "table",
          "rawSql": "SELECT customer_id, heart_rate, anomaly_type, event_timestamp, ingestion_timestamp FROM vw_recent_anomalies LIMIT 100;",
          "refId": "A"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 26 },
      "id": 13,
      "title": "Pipeline Metrics History",
      "type": "row"
    },
    {
      "datasource": { "type": "postgres", "uid": "heartbeat-postgres" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 5,
            "showPoints": "auto",
            "spanNulls": false
          },
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 27 },
      "id": 8,
      "options": {
        "legend": { "calcs": ["last"], "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "multi", "sort": "none" }
      },
      "title": "Pipeline Throughput Snapshots (valid / anomaly / errors)",
      "type": "timeseries",
      "targets": [
        {
          "datasource": { "type": "postgres", "uid": "heartbeat-postgres" },
          "format": "time_series",
          "rawSql": "SELECT recorded_at AS \"time\", metric_value AS \"value\", metric_name AS \"metric\" FROM pipeline_metrics WHERE metric_name IN ('valid_processed','anomaly_processed','errors') AND $__timeFilter(recorded_at) ORDER BY recorded_at ASC",
          "refId": "A",
          "timeColumn": "time"
        }
      ]
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "tags": ["heartbeat", "kafka", "postgresql", "real-time"],
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
